!!!
%html
  %head
    %meta{:content => "text/html; charset=UTF-8", "http-equiv" => "Content-Type"}/
    %meta{name: 'viewport', content: 'width=device-width, initial-scale=1.0'}
    %title MyPreset

    = csrf_meta_tags
    = stylesheet_link_tag    'application', media: 'all'
    = javascript_include_tag 'application'
    .site_header
      %nav.navbar.navbar-expand-md.navbar-light.bg-light.justify-content-between
        = link_to t('sitetitle'), root_path, class: "navbar-brand"
        %nav.navbar-light.bg-light
          -if user_signed_in?
            = link_to root_path, class: "btn btn-outline-primary" do
              %i.fa.fa-user{"aria-hidden" => "true"}
              =t('mypage')
          -else
            %form
              = link_to t('login'), shop_top_index_path, class: "btn btn-outline-primary"
              %button.btn.btn-primary{type: "button"}
                = t('signin')

  %body
    .site_body
      = yield
